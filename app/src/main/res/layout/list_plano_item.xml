<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/md_white_1000"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/planoNome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Toda Hora + Pacote torpedo"
                android:textAllCaps="true"
                android:padding="10dp"
                android:gravity="center_horizontal"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/md_grey_800"
                android:background="@color/md_green_200"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Modalidade"
                        android:layout_weight="0.5"
                        style="@android:style/TextAppearance.Small"/>

                    <TextView
                        android:id="@+id/modalidade_plano"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Pré-pago"
                        android:layout_weight="0.6"
                        style="@android:style/TextAppearance.Small"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Operadora"
                        android:layout_weight="0.5"
                        style="@android:style/TextAppearance.Small"/>

                    <TextView
                        android:id="@+id/nome_operadora"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Claro"
                        android:layout_weight="0.6"
                        style="@android:style/TextAppearance.Small"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Descrição"
                        android:layout_weight="0.5"
                        style="@android:style/TextAppearance.Small"/>

                    <TextView
                        android:id="@+id/descricao_plano"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:layout_weight="0.6"
                        style="@android:style/TextAppearance.Small"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Preço"
                        android:layout_weight="0.5"
                        style="@android:style/TextAppearance.Small"/>

                    <TextView
                        android:id="@+id/preco_plano"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="R$ 20,00"
                        android:layout_weight="0.6"
                        style="@android:style/TextAppearance.Small"/>

                </LinearLayout>

                <!-- Campos com as informações básicas
                     de minutos/sms/net, pode ser ocultado -->
                <LinearLayout
                    android:id="@+id/limites_info_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Separator -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">
                        <View
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/darker_gray"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Min. MO/OO/Fixo/IU"
                            android:layout_weight="0.5"
                            style="@android:style/TextAppearance.Small"/>

                        <TextView
                            android:id="@+id/minutagens"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="00/00/00/00"
                            android:layout_weight="0.6"
                            style="@android:style/TextAppearance.Small"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Dados WEB (MB)"
                            android:layout_weight="0.5"
                            style="@android:style/TextAppearance.Small"/>

                        <TextView
                            android:id="@+id/limite_dados"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="10 MB"
                            android:layout_weight="0.6"
                            style="@android:style/TextAppearance.Small"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Limite de SMS"
                            android:layout_weight="0.5"
                            style="@android:style/TextAppearance.Small"/>

                        <TextView
                            android:id="@+id/limite_sms"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_weight="0.6"
                            style="@android:style/TextAppearance.Small"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>