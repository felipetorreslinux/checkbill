<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:id="@+id/myPlanCardItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="4dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="@color/md_white_1000">
        <!-- Scroll para garantir que caso a tela seja menor,
             possa ainda ser exibido o restante dos dados. -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/plano_nome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nome do Plano"
                    android:textAllCaps="true"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textColor="@color/md_grey_800"
                    android:background="@color/md_grey_10"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Operadora"
                            android:layout_weight="0.45"
                            style="@android:style/TextAppearance.Small"/>

                        <TextView
                            android:id="@+id/plano_operadora"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Claro"
                            android:layout_weight="0.55"
                            android:textStyle="bold"
                            style="@android:style/TextAppearance.Small"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Modalidade do Plano"
                            android:layout_weight="0.45"
                            style="@android:style/TextAppearance.Small"/>

                        <TextView
                            android:id="@+id/modalidade_plano"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:layout_weight="0.55"
                            android:textStyle="bold"
                            style="@android:style/TextAppearance.Small"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Tipo do Plano"
                            android:layout_weight="0.45"
                            style="@android:style/TextAppearance.Small"/>

                        <TextView
                            android:id="@+id/tipo_plano"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:layout_weight="0.55"
                            android:textStyle="bold"
                            style="@android:style/TextAppearance.Small"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Preço"
                            android:layout_weight="0.45"
                            style="@android:style/TextAppearance.Small"/>

                        <TextView
                            android:id="@+id/preco_plano"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="R$ 20,00"
                            android:layout_weight="0.55"
                            android:textStyle="bold"
                            style="@android:style/TextAppearance.Small"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Montagem do Plano + Pacote"
                    android:textAllCaps="true"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textColor="@color/md_grey_800"
                    android:background="@color/md_grey_10"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Nome do Pacote"
                            android:layout_weight="0.45"
                            style="@android:style/TextAppearance.Small"/>

                        <TextView
                            android:id="@+id/nome_pacote"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Pacote X..."
                            android:layout_weight="0.55"
                            android:textStyle="bold"
                            style="@android:style/TextAppearance.Small"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Min MO/OO/IU/Fixo"
                            android:layout_weight="0.45"
                            style="@android:style/TextAppearance.Small"/>

                        <TextView
                            android:id="@+id/minutagens"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="0/0/0/0"
                            android:layout_weight="0.55"
                            android:textStyle="bold"
                            style="@android:style/TextAppearance.Small"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Dados WEB"
                            android:layout_weight="0.45"
                            style="@android:style/TextAppearance.Small"/>

                        <TextView
                            android:id="@+id/limite_net"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="10 MB"
                            android:layout_weight="0.55"
                            android:textStyle="bold"
                            style="@android:style/TextAppearance.Small"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Nº SMS"
                            android:layout_weight="0.45"
                            style="@android:style/TextAppearance.Small"/>

                        <TextView
                            android:id="@+id/limite_sms"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_weight="0.55"
                            android:textStyle="bold"
                            style="@android:style/TextAppearance.Small"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Preço"
                            android:layout_weight="0.45"
                            style="@android:style/TextAppearance.Small"/>

                        <TextView
                            android:id="@+id/preco_final"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="R$ 40,00"
                            android:layout_weight="0.55"
                            android:textStyle="bold"
                            style="@android:style/TextAppearance.Small"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@android:color/darker_gray"/>
                <TextView
                    android:id="@+id/moreInfoTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold|italic"
                    android:layout_marginBottom="10dp"
                    android:text="Ver Mais Informações"/>
            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</LinearLayout>
